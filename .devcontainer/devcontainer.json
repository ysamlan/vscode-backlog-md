{
  "name": "vscode-backlog.md",
  "build": {
    "dockerfile": "Dockerfile",
    // amd64 required for vscode-extension-tester support
    "options": ["--platform=linux/amd64"],
    "args": {
      "TZ": "${localEnv:TZ:America/New_York}"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "anthropic.claude-code",
        "teabyii.ayu"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "typescript.tsdk": "node_modules/typescript/lib",
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },
  "remoteUser": "node",
  "mounts": [
    "source=vscode-backlog-md-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=vscode-backlog-md-claude-config-${devcontainerId},target=/home/node/.claude,type=volume",
    "source=vscode-backlog-md-codex-config-${devcontainerId},target=/home/node/.codex,type=volume",
    "source=vscode-backlog-md-node-modules-cache-${devcontainerId},target=${containerWorkspaceFolder}/node_modules,type=volume"
  ],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace",
  "postStartCommand": "mise trust --yes && mise install --yes && bun install",
  "waitFor": "postStartCommand"
}
