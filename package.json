{
  "name": "vscode-backlog-md",
  "displayName": "Backlog.md",
  "description": "Beautiful UI for browsing and managing Backlog.md tasks",
  "version": "0.0.1",
  "publisher": "backlog-md",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ysamlan/vscode-backlog-md"
  },
  "homepage": "https://github.com/ysamlan/vscode-backlog-md#readme",
  "bugs": {
    "url": "https://github.com/ysamlan/vscode-backlog-md/issues"
  },
  "keywords": [
    "backlog",
    "kanban",
    "tasks",
    "todo",
    "project management",
    "markdown"
  ],
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [
    "workspaceContains:**/backlog/tasks/*.md"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "backlog.openKanban",
        "title": "Backlog: Open Kanban Board"
      },
      {
        "command": "backlog.openTaskList",
        "title": "Backlog: Open Task List"
      },
      {
        "command": "backlog.openDashboard",
        "title": "Backlog: Open Dashboard"
      },
      {
        "command": "backlog.refresh",
        "title": "Backlog: Refresh"
      },
      {
        "command": "backlog.openTaskDetail",
        "title": "Backlog: Open Task Detail"
      },
      {
        "command": "backlog.createTask",
        "title": "Backlog: Create Task",
        "icon": "$(add)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "backlog.createTask",
          "when": "view == backlog.kanban",
          "group": "navigation"
        },
        {
          "command": "backlog.refresh",
          "when": "view == backlog.kanban",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "backlog",
          "title": "Backlog",
          "icon": "$(checklist)"
        }
      ]
    },
    "views": {
      "backlog": [
        {
          "type": "webview",
          "id": "backlog.kanban",
          "name": "Tasks"
        }
      ]
    }
  },
  "scripts": {
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "build:css": "npx @tailwindcss/cli -i ./src/webview/styles.css -o ./dist/webview/styles.css",
    "build": "npm run build:css && npm run compile",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "npm run build && tsc -p tsconfig.e2e.json && bash scripts/run-e2e.sh",
    "test:webview": "concurrently --kill-others --success first \"vite\" \"wait-on http://localhost:5173 && cypress run\"",
    "test:webview:open": "concurrently --kill-others \"vite\" \"wait-on http://localhost:5173 && cypress open\"",
    "webview:serve": "vite",
    "lint": "eslint src",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "package": "vsce package",
    "licenses:generate": "bash scripts/generate-licenses.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/cli": "^4.1.0",
    "@types/chai": "^5.2.3",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.8",
    "@types/vscode": "^1.108.0",
    "chai": "^6.2.2",
    "concurrently": "^9.2.1",
    "cypress": "^15.10.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "generate-license-file": "^4.1.1",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.0",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "vscode-extension-tester": "^8.21.0",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "js-yaml": "^4.1.1",
    "marked": "^17.0.1"
  }
}
