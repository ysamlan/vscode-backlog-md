{
  "name": "vscode-backlog-md",
  "displayName": "Backlog.md",
  "description": "Beautiful UI for browsing and managing Backlog.md tasks",
  "version": "0.0.1",
  "publisher": "ysamlan",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ysamlan/vscode-backlog-md"
  },
  "homepage": "https://github.com/ysamlan/vscode-backlog-md#readme",
  "bugs": {
    "url": "https://github.com/ysamlan/vscode-backlog-md/issues"
  },
  "keywords": [
    "backlog",
    "kanban",
    "tasks",
    "todo",
    "project management",
    "markdown"
  ],
  "engines": {
    "vscode": "^1.108.0",
    "node": ">=22"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [
    "workspaceContains:**/backlog/tasks/*.md",
    "workspaceContains:**/backlog/config.yml",
    "workspaceContains:**/backlog/config.yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Backlog.md",
      "properties": {
        "backlog.taskIdDisplay": {
          "type": "string",
          "enum": [
            "full",
            "number",
            "hidden"
          ],
          "default": "full",
          "description": "Controls how task IDs are shown in task cards and list rows: full (TASK-123), number (123), or hidden."
        }
      }
    },
    "commands": [
      {
        "command": "backlog.openKanban",
        "title": "Backlog: Open Kanban Board"
      },
      {
        "command": "backlog.openTaskList",
        "title": "Backlog: Open Task List"
      },
      {
        "command": "backlog.openDashboard",
        "title": "Backlog: Open Dashboard"
      },
      {
        "command": "backlog.refresh",
        "title": "Backlog: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "backlog.openTaskDetail",
        "title": "Backlog: Open Task Detail"
      },
      {
        "command": "backlog.createTask",
        "title": "Backlog: Create Task",
        "icon": "$(add)"
      },
      {
        "command": "backlog.openRawMarkdown",
        "title": "Backlog: Open Task Raw Markdown"
      },
      {
        "command": "backlog.showListView",
        "title": "Switch to List View",
        "icon": "$(list-flat)"
      },
      {
        "command": "backlog.showKanbanView",
        "title": "Switch to Kanban View",
        "icon": "$(layout)"
      },
      {
        "command": "backlog.showDraftsView",
        "title": "Switch to Drafts View",
        "icon": "$(edit)"
      },
      {
        "command": "backlog.showArchivedView",
        "title": "Switch to Archived View",
        "icon": "$(archive)"
      },
      {
        "command": "backlog.showDocsView",
        "title": "Backlog: Show Documents"
      },
      {
        "command": "backlog.showDecisionsView",
        "title": "Backlog: Show Decisions"
      },
      {
        "command": "backlog.openDocumentDetail",
        "title": "Backlog: Open Document Detail"
      },
      {
        "command": "backlog.openDecisionDetail",
        "title": "Backlog: Open Decision Detail"
      }
    ],
    "menus": {},
    "viewsContainers": {
      "activitybar": [
        {
          "id": "backlog",
          "title": "Backlog",
          "icon": "$(checklist)"
        }
      ]
    },
    "views": {
      "backlog": [
        {
          "type": "webview",
          "id": "backlog.kanban",
          "name": "Tasks"
        },
        {
          "type": "webview",
          "id": "backlog.taskPreview",
          "name": "Details",
          "visibility": "visible"
        }
      ]
    }
  },
  "scripts": {
    "compile": "bun scripts/build.ts",
    "compile:webview": "vite build --config vite.webview.config.ts",
    "watch": "bun scripts/build.ts --watch",
    "build:css": "bunx @tailwindcss/cli -i ./src/webview/styles.css -o ./dist/webview/styles.css",
    "build": "bun run build:css && bun run compile:webview && bun run compile",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "bun run build && tsc -p tsconfig.e2e.json && bash scripts/run-e2e.sh",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "demo:cross-branch-setup": "bash scripts/setup-cross-branch-demo.sh",
    "webview:serve": "vite",
    "lint": "eslint src e2e",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "package": "vsce package",
    "licenses:generate": "bash scripts/generate-licenses.sh",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ],
    "*.{ts,js,json,md,yml,yaml,css,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/cli": "^4.1.0",
    "@testing-library/svelte": "^5.3.1",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.8",
    "@types/vscode": "^1.108.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "generate-license-file": "^4.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.0",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "vscode-extension-tester": "^8.21.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.1",
    "marked": "^17.0.1",
    "svelte": "^5.49.2"
  }
}
